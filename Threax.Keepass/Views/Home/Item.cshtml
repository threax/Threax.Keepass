@{
    ViewData["Title"] = "Items";
}

<div class="row">
    <div data-hr-controller="mainTable" class="col-md-8">
        <h1>Items</h1>
        <load visible="true">
            <p>Working...</p>
        </load>
        <main>
            <div class="table-responsive">
                <table class="table table-bordered table-hover">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody data-hr-view="listing" data-hr-view-component="mainTableBody"></tbody>
                </table>
                <template data-hr-component="mainTableBody">
                    <table>
                        <tr>
                            <td data-hr-on-click="visit" class="absorbing-column cursor-pointer">{{if isGroup}}&#128193;{{/if}} {{name}}</td>
                            <td>
                                <button data-hr-on-click="view" class="btn btn-default" data-hr-toggle="view" data-hr-style-off="display:none;">View</button>
                                <button data-hr-on-click="del" class="btn btn-default" data-hr-toggle="del" data-hr-style-off="display:none;">Delete</button>
                            </td>
                        </tr>
                    </table>
                </template>
            </div>
            <button data-hr-on-click="add" class="btn btn-default" data-hr-toggle="add" data-hr-style-off="display:none;">Add</button>

            <page-numbers></page-numbers>
        </main>

        <error>
            An error occured loading the items. Please try again later.
        </error>
    </div>

    <div class="col-md-4">
        <div data-hr-controller="search">
            <load visible="true">
                <p>Loading Search...</p>
            </load>
            <main>
                <form data-hr-on-submit="submit" data-hr-form="input">
                    <p class="bg-danger hiddenToggler" data-hr-toggle="mainError" data-hr-view="mainError" data-hr-style-on="display:block;">{{message}}</p>

                    <button type="submit" class="btn btn-primary" data-hr-form-end>Search</button>
                </form>
            </main>
            <error>
                An error occured loading the search form. Please try again later.
            </error>
        </div>
    </div>
</div>

<modal data-hr-controller="entryEditor" title-text="Entry" dialog-classes="modal-lg">
    <load class="modal-body">
        <p>Working...</p>
    </load>
    <main>
        <form class="form-horizontal" data-hr-form-component="hr.forms.horizontal" data-hr-on-submit="submit" data-hr-form="input">
            <fieldset class="modal-body" data-hr-toggle="viewOnly" data-hr-disabled-on="true">
                <div class="alert alert-danger hiddenToggler" role="alert" data-hr-toggle="mainError" data-hr-view="mainError" data-hr-style-on="display:block;" style="">{{message}}</div>
                <div class="password-wrapper">
                    <input type="text" data-hr-handle="copyElement">
                </div>
                <div data-hr-form-place="name"></div>
                <div data-hr-form-place="userName"></div>
                <div class="" data-hr-toggle="passwordHide" data-hr-style-on="display:none;">
                    <div class="form-group row">
                        <label for="hr-form-prop-2" class="col-sm-2 col-form-label" data-hr-toggle="passwordError" data-hr-class-on="text-danger">Password</label>
                        <div class="col-sm-10">
                            <input name="password" data-hr-handle="passwordCopyElement" id="hr-form-prop-2" class="form-control" password="password" type="password" data-hr-toggle="passwordError" data-hr-class-on="is-invalid" data-hr-form-level="">
                            <div class="invalid-feedback d-none" data-hr-view="passwordErrorMessage" data-hr-toggle="passwordError" data-hr-class-on="d-block" data-hr-class-off="d-none" data-hr-state="off"></div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <button class="btn btn-lg" data-hr-on-click="loadPassword">
                        Load
                    </button>
                    <button class="btn btn-lg" data-hr-on-click="copyPassword" data-hr-toggle="copy" data-hr-class-off="disabled">
                        Copy
                    </button>
                </div>
                <span data-hr-form-end=""></span>
            </fieldset>
            <div class="modal-footer" data-hr-toggle="viewOnly" data-hr-style-on="display:none;">
                <button type="submit" class="btn btn-primary">Save changes</button>
            </div>
        </form>
    </main>
    <error class="modal-body">
        <p>An error occured loading the value. Please try again later.</p>
    </error>
</modal>